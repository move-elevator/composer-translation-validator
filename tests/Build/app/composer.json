{
	"require": {
		"move-elevator/composer-translation-validator": "@dev"
	},
	"require-dev": {
		"composer/composer": "^2.0"
	},
	"repositories": [
		{
			"type": "path",
			"url": "./../../../../*"
		}
	],
	"config": {
		"allow-plugins": {
			"move-elevator/composer-translation-validator": true
		}
	},
	"scripts": {
		"translation:xliff:all": "@composer validate-translations ./Language/XLIFF-fail ./Language/XLIFF-success",
		"translation:xliff:all:check": "@composer validate-translations ./Language/XLIFF-fail ./Language/XLIFF-success --dry-run",
		"translation:xliff:fail": "@composer validate-translations ./Language/XLIFF-fail",
		"translation:xliff:fail:check": "@composer validate-translations ./Language/XLIFF-fail --dry-run",
		"translation:xliff:success": "@composer validate-translations ./Language/XLIFF-success",
		"translation:xliff:success:check": "@composer validate-translations ./Language/XLIFF-success --dry-run",
		"translation:xliff:duplicates": "@composer validate-translations ./Language/XLIFF-fail ./Language/XLIFF-success --validator=\"MoveElevator\\\\ComposerTranslationValidator\\\\Validator\\\\DuplicatesValidator\"",
		"translation:yaml:all": "@composer validate-translations ./Language/YAML-fail ./Language/YAML-success",
		"translation:yaml:all:check": "@composer validate-translations ./Language/YAML-fail ./Language/YAML-success --dry-run",
		"translation:yaml:fail": "@composer validate-translations ./Language/YAML-fail",
		"translation:yaml:fail:check": "@composer validate-translations ./Language/YAML-fail --dry-run",
		"translation:yaml:success": "@composer validate-translations ./Language/YAML-success",
		"translation:yaml:success:check": "@composer validate-translations ./Language/YAML-success --dry-run"
	}
}
